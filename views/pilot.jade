extends layout

block content
	.container-fluid#container-diag 
	
		.row.justify-content-between
			
			.col#col-diag-left
				.row.justify-content-center				
					.eg-block
						img.img-eg#img-eg-qual(src="http://localhost:3000/gallery/1.2.392.200046.100.3.8.101171.7698.20170206120809.1.1.1.1.png", width='200px')

						ul.pagination.justify-content-center
							li.page-item
								a.page-link(href="#") High Quality
							li.page-item
								a.page-link(href="#") Low  Quality
				
				.row.justify-content-center
					.eg-block
						img.img-eg#img-eg-dr(src="http://localhost:3000/gallery/1.2.392.200046.100.3.8.101171.7698.20170206120809.1.1.1.1.png", width='200px')

						ul.pagination.justify-content-center
							li.page-item
								a.page-link(href="#") R0
							li.page-item
								a.page-link(href="#") R1
							li.page-item
								a.page-link(href="#") R2
							li.page-item
								a.page-link(href="#") R3
			

			.col#col-diag-center
				.row.justify-content-center
					.image-container.col-auto
						.img-column
							img.img-disp#img-disp(src="")

				.row.justify-content-md-center
					.gallery-container
						.gallery#gallery

			.col#col-diag-right
				.row.justify-content-right
					.menu-container.col
						.menu-btn-dr#menu-qual
							button.btn.btn-outline-secondary#btn-qual(onClick="quality();", style=btnshow) Quality Assessment
			
							.eval-container
								.res-field#res-field-qual
									label.result-txt#lbl-res1 Quality Assessment: 
									label.result-txt#lbl-res2 

						.menu-btn-dr#menu-dr
							button.btn.btn-outline-secondary#btn-dr(onClick="dr_detection();", style=btnshow) Diabetic Retinopathy
			
							.eval-container
								.res-field#res-field-dr
									label.result-txt#lbl-res3 Probability of the Disease: 100%
									label.result-txt#lbl-res4 


	script(src="/javascripts/screen.js")
	script.
		$(document).ready(function(){
			loadGallery();
		});