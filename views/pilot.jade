extends layout

block content
	.container-fluid#container-diag 
	
		.row.justify-content-between
			
			.col#col-diag-left
				.row.justify-content-center				

					.eg-block
						.h6.text-white.eg-lbl Quality

						.btn-group.btn-group-sm.eg-btn-group(role='group' aria-label='Quality examples')
							button.btn.btn-outline-light.eg-btn-qual High
							button.btn.btn-outline-light.eg-btn-qual Low

				
						img.img-eg#img-eg-qual(src="http://localhost:3000/gallery/1.2.392.200046.100.3.8.101171.7698.20170206120809.1.1.1.1.png")


				.row.justify-content-center
					.eg-block
						.h6.text-white.eg-lbl Diabetic Retinopathy
						
						.btn-group.btn-group-sm.eg-btn-group(role='group' aria-label='DR examples')
							button.btn.btn-outline-light.eg-btn-dr R0
							button.btn.btn-outline-light.eg-btn-dr R1
							button.btn.btn-outline-light.eg-btn-dr R2
							button.btn.btn-outline-light.eg-btn-dr R3


						img.img-eg#img-eg-dr(src="http://localhost:3000/gallery/1.2.392.200046.100.3.8.101171.7698.20170206120809.1.1.1.1.png")
			

			.col#col-diag-center
				.row.justify-content-center
					.image-container.col-auto
						.img-column
							img.img-disp#img-disp(src="")

				.row.justify-content-md-center
					.gallery-container
						.gallery#gallery

			.col#col-diag-right
				.row.justify-content-right
					.menu-container.col
						.menu-btn-dr#menu-qual
							button.btn.btn-outline-secondary#btn-qual(onClick="quality();", style=btnshow) Quality Assessment
			
							.eval-container
								.res-field#res-field-qual
									label.result-txt#lbl-res1 Quality Assessment: 
									label.result-txt#lbl-res2 

						.menu-btn-dr#menu-dr
							button.btn.btn-outline-secondary#btn-dr(onClick="dr_detection();", style=btnshow) Diabetic Retinopathy
			
							.eval-container
								.res-field#res-field-dr
									label.result-txt#lbl-res3 Probability of the Disease: 100%
									label.result-txt#lbl-res4 


	script(src="/javascripts/screen.js")
	script.
		$(document).ready(function(){
			loadGallery();
		});